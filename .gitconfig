[user]
    name = Akash Agrawal
    email = akagr@outlook.com
[push]
    default = simple
[alias]
    co = checkout
    ci = commit
    st = status
    br = branch
    hist = log --pretty=format:"%C(yellow)%h\\ %Cgreen%d\\ %Creset%s\\ %Cred[%aN\\ -\\ %ad]%Creset" --date=short --graph --all
    shoot = push origin --delete
[color]
    ui = true
[core]
    editor = nvim
    autocrlf = input
    safecrlf = true
    filemode = false
[credential]
    helper = cache --timeout=36000
